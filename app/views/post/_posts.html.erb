<table>
  <thead>
  <tr>
    <th class="sort"><%= sortable "created_at", "created_at" %></th>
    <th class="sort"><%= sortable "deadline", "deadline" %></th>
    <th class="sort"><%= sortable "priority", "priority" %></th>
  </tr>
  </thead>
</table>
<table class="posts-table">
  <tr>
    <th>State</th>
    <th>Priority</th>
    <th>Limit</th>
    <th>Post</th>
  </tr>
  <% @posts.each do |post| %>
    <% if post.user_id == current_user.id %>
      <tr>
        <td><%= status(post.current_state) %>/<%= post.current_state %></td>
        <td><%= priority_state(post.priority) %></td>
        <td><%= post.deadline %></td>
        <td><%= link_to(post.name ,"/post/show/#{post.id}") %> / <%= link_to("æ¬¡","/post/next/#{post.id}") %></td>
      </tr>
    <% end %>
  <% end %>
</table>
<%= paginate @posts %>
